rule clonalFrameML:
	input:
		msa="{sample}_concat_s1.xmfa",
		tree="{sample}_ML_tree_with_RR.nwk"
	output:
		dir=directory("{sample}_cfml")
	conda:
		"env/core_g_env.yml"
	threads: 1
	resources:
		mem_mb=config['mem']
	shell:
		"mkdir {output};"
		#"cp DEBUG/rso_test_cfml/* {output}"
		"ClonalFrameML {input.tree} {input.msa} {output} -xmfa_file true ; "
		"mv {output}.* {output}/"

rule clonalFrameML2:
